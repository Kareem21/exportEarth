{
  "include": [
      "src/**/*"
  ],
  "compilerOptions": {
      "module": "ESNext",
      "target": "ES2015",
      "moduleResolution": "node",
      "declaration": true,
      "declarationDir": "dist",
      "outDir": "dist",
      "baseUrl": ".",
      "noImplicitAny": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": false
  }
}